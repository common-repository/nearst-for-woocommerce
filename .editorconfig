root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
[*.{html,js,php,css,scss}]
charset = utf-8

# 4 space indentation
[*.{html,js,php,css,scss}]
indent_style = tab
indent_size = 4

# Matches the exact files
[{package.json,.eslintrc,.travis.yml,.sass-lint.yml,phpcs.xml}]
indent_style = space
indent_size = 2
